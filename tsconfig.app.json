/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@services/*": ["src/app/_services/*"],
      "@components/*": ["src/app/components/*"],
      "@tools/*": ["src/app/tools/*"],
      "@options/*": ["src/app/options/*"],
      "@pipes/*": ["src/app/pipes/*"],
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
